{
  "manifest_version": 3,
  "name": "Sağlıklı Mola Hatırlatıcı",
  "version": "1.0",
  "description": "Düzenli molalar için nazik hatırlatmalar",
  "permissions": ["alarms", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["audio/*"],
    "matches": ["<all_urls>"]
  }]
}